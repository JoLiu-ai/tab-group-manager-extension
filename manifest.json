{
  "manifest_version": 3,
  "name": "标签页分组管理器",
  "version": "1.0.0",
  "description": "用于整理和管理 Chrome 标签页分组的工具",
  "permissions": [
    "storage",
    "tabs",
    "tabGroups",
    "contextMenus",
    "history"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_page": "manager.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}

